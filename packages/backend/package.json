{
  "name": "@solid-octo-invention/backend",
  "version": "0.1.0",
  "description": "Backend API server with PostGraphile and Effect-TS",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "worker:start": "tsx src/worker/index.ts",
    "db:seed": "tsx scripts/seed.ts",
    "schema:generate": "tsx scripts/generate-schema.ts"
  },
  "dependencies": {
    "@effect/platform": "^0.85.2",
    "@effect/platform-node": "^0.86.4",
    "@effect/schema": "^0.75.5",
    "@graphile-contrib/pg-omit-archived": "3.2.1",
    "@simplewebauthn/server": "^9.0.3",
    "@solid-octo-invention/shared": "workspace:*",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "effect": "^3.16.8",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "graphile-migrate": "^1.4.1",
    "graphile-worker": "^0.16.6",
    "helmet": "^7.1.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "postgraphile": "^4.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
